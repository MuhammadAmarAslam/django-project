    <div class="container my-4">
        <h1 class="text-center mb-4">Available Courses</h1>

        <!-- FIRST LOOP: Loop over the list of courses -->
        {% for course in course_list %}
        <div class="card mb-3">
            <div class="card-header bg-primary text-white">
                <h2>{{ course.name }}</h2>
            </div>
            <div class="card-body">
                <p class="card-text">{{ course.description }}</p>
                <h5>Lessons in this course:</h5>

                <!-- SECOND LOOP: Nested loop over the lessons in the current course -->
                {% for lesson in course.lesson_set.all %}
                <div class="alert alert-info mt-2">
                    <strong>{{ lesson.title }}</strong>
                    <p>{{ lesson.content }}</p>
                </div>
                {% endfor %} <!-- This ends the second loop -->

            </div>
        </div>
        {% endfor %} <!-- This ends the first loop -->

    </div>
